{
  "name": "eryndor-campaign",
  "version": "1.0.0",
  "description": "D&D Campaign Site for the World of Eryndor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:css": "sass src/styles/main.scss dist/css/style.css --style=expanded",
    "build:css-min": "sass src/styles/main scss dist/css/style.min.css --style=compressed",
    "watch:css": "sass src/styles/main.scss dist/css/style.css --watch",
    "serve": "python -m http.server 8080 -d dist"
  },
  "dependencies": {
    "firebase": "^12.2.1",
    "sass": "^1.93.1",
    "vite": "^7.1.7"
  }
}
